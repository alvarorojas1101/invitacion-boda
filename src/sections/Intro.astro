---
import ControlMusic from '@/components/ControlMusic.jsx'
---

<main id="landing-intro">
    <section class="max-w-[650px] text-center animate-blurred-fade-in">
        <!-- Contenedor del logo - Versión móvil aumentada -->
        <div class="flex justify-center -mt-6 mb-4 desktop:-mt-8 desktop:mb-8">
            <div class="w-[250px] h-[250px] desktop:w-56 desktop:h-56 rounded-full 
        overflow-hidden  shadow-lg  transform hover:scale-105 transition-transform">
                <img 
                    src="/favicon.png" 
                    class="w-full h-full object-cover" 
                    alt="Alvaro y Jersy"
                />
            </div>
        </div>

        <h1 class="text-center font-medium font-parisienne text-[#B97600] text-5xl desktop:text-6xl mb-3 desktop:mb-4">
            Bienvenidos
        </h1>
        
        <p class="text-[#6F6F6E] text-lg desktop:text-1xl max-w-[500px] mx-auto leading-relaxed">
            Queremos contar contigo en el día más especial de nuestras vidas
        </p>

        <div class="mt-6 desktop:mt-10">
            <ControlMusic client:load />
        </div>
    </section>
</main>
<style>
    #landing-intro {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        position: relative;
        @apply mx-8;
    }
    .btn-music {
        background-color: #b97600;
        color: white;

        @apply px-10;
        @apply py-3;
        @apply rounded-3xl;
        @apply shadow-md;
        @apply font-medium;
        margin: 8px;
    }
    @media (max-width: 1023px) {
        .btn-music {
            @apply text-xs;
            @apply px-8;
            @apply py-3;
        }
    }
</style>

